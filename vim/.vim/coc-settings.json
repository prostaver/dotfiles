{
  // general
  "coc.preferences.formatOnSave": true,
  "coc.preferences.formatOnSaveTimeout": 5000,

  // pyright
  "pyright.disableDiagnostics": true,

  // mypy
  "python.linting.mypyEnabled": true,

  // ruff
  "ruff.autoFixOnSave": true,
  "ruff.lineLength": 79,
  // "ruff.lint.args": [
  //     "max-line-length=79"
  // ],
  "ruff.format.args": ["line-length", "79"],

  // python flake8
  // "python.linting.flake8Enabled": true,
  // "python.linting.flake8Args": ["--max-line-length=79"],

  // python formatting
  "python.formatting.provider": "none",
  // "python.formatting.blackArgs": ["--line-length=79", "--preview"],

  // tsserver
  "tsserver.log": "normal",

  // node vue
  "vetur.useWorkspaceDependencies": true,
  "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/17.0.3/clangd_17.0.3/bin/clangd"
}
